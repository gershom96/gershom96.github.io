---
layout: default
---
<div class="post">
  <div class="row">
    <!-- Sidebar (Profile Picture and CV Link) -->
    <div class="col-12 col-md-3">
      {% if page.profile %}
        <div class="profile">
          {% if page.profile.image %}
            {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
            {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
            {%
              include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true
            %}
          {% endif %}
          <!-- Link to CV -->
          {% if page.profile.cv_link %}
            <div class="cv-link">
              <a href="{{ page.profile.cv_link }}" class="btn btn-primary mt-3">Curriculum Vitae</a>
            </div>
          {% endif %}
           <!-- Link to CV -->
          {% if page.profile.cv_link %}
            <div class="cv-link">
              <a href="{{ page.profile.cv_link }}" class="btn btn-primary mt-3">Curriculum Vitae</a>
            </div>
          {% endif %}
          <!-- Social Icons Section -->
          <div class="social-icons mt-3">
            {% include social_vertical.liquid %}
          </div>
        </div>
      {% endif %}
    </div>

    <!-- Main Content (Title, Bio, Selected Papers) -->
    <div class="col-12 col-md-6">
      <header class="post-header">
        <h1 class="post-title">
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }} {{ site.last_name }}
          {% else %}
            {{ site.title }}
          {% endif %}
        </h1>
        <p class="desc">{{ page.subtitle }}</p>
      </header>

      <article>
        <div class="clearfix">{{ content }}</div>

        <!-- Selected Papers Section -->
        {% if page.selected_papers %}
          <div class="selected-papers-section">
            <h2>
              <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected Publications</a>
            </h2>
            {% include selected_papers.liquid %}
          </div>
        {% endif %}
      </article>
    </div>

    <!-- News Section in a separate column -->
    <div class="col-12 col-md-3">
      {% if page.news and site.announcements.enabled %}
        <div class="news-section mb-4">
          <h2>
            <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
          </h2>
          {% include news.liquid limit=true %}
        </div>
      {% endif %}
    </div>
  </div>

  {% if site.newsletter.enabled and site.footer_fixed %}
    {% include scripts/newsletter.liquid center=true %}
  {% endif %}
</div>
