<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 cl-sm-4 col-md-4 text-center date-column">
          {% if content.startDate and content.startDate != '' %}
            {% assign startDate = content.startDate | date: "%b %Y" %}
            {% assign endDate = content.endDate | date: "%b %Y" | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = null %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date %}
                    <p class="duration font-weight-light align-left">
                      <i class="fa-regular fa-calendar"></i>
                      {{ date }}
                    </p>
                  {% endif %}
                </td>
              </tr>

              {% if content.institution %}
                <tr>
                  <td>
                    <p class="school align-left">
                      <i class="fa-solid fa-school"></i>
                      {{ content.institution }}
                    </p>
                  </td>
                </tr>
              {% endif %}

              {% if content.location %}
                <tr>
                  <td>
                    <p class="location align-left">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-8 cl-sm-8 col-md-8 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.studyType }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 1rem">GPA: {{ content.score }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 1rem; font-style: italic">{{ content.area }}</h6>
          <ul class="items">
            {% for item in content.courses %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
